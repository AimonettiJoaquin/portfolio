---
import Layout from "@/layouts/Layout.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import Hero from "@/components/Hero.astro";
import CodeIcon from "@/components/icons/Code.astro";
import Projects from "@/components/Projects.astro";
import ProfileCheck from "@/components/ProfileCheck.astro";
import AboutMe from "@/components/AboutMe.astro";
import Work from "@/components/Work.astro"; // <-- Importa el componente Work

import { getI18N } from "@/i18n";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<Layout
  title="Porfolio de Joaquin - Desarrollador"
  description="Contrata a Joaquin"
>
  <main class="px-4">
    <SectionContainer class="py-16 md:py-36">
      <Hero />
    </SectionContainer>

    <div class="space-y-24">
      <SectionContainer id="work">
        <h2
          class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
        >
          <CodeIcon class="size-7" />
          {i18n.WORK_H1}
        </h2>
        <Work />
      </SectionContainer>

      <SectionContainer id="projects">
        <h2
          class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
        >
          <CodeIcon class="size-7" />
          {i18n.PROJECTS_H1}
        </h2>
        <Projects />
      </SectionContainer>

      <SectionContainer id="about">
        <h2
          class="flex items-center mb-6 text-3xl font-semibold gap-x-8 text-black/80 dark:text-white"
        >
          <ProfileCheck class="size-8" />
          {i18n.ABOUT_H1}
        </h2>
        <AboutMe />
      </SectionContainer>
    </div>
  </main>
</Layout>
